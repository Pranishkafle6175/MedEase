<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImageSetupActivity">




    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/setupimage"
        android:layout_width="282dp"
        android:layout_height="272dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="85dp"
        android:src="@drawable/menimage" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/plusanimation"
        android:layout_width="88dp"
        android:layout_height="104dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="234dp"
        android:layout_marginEnd="88dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/plus" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="227dp"
        android:layout_height="41dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="353dp"
        android:layout_marginEnd="102dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/loading" />

    <TextView
        android:id="@+id/number"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/setupimage"
        android:layout_alignParentTop="true"
        android:layout_marginTop="514dp"
        android:layout_marginEnd="23dp"
        android:paddingLeft="30dp"
        android:text="Number"
        android:textColor="#FD0606"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/name"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/setupimage"
        android:layout_alignParentTop="true"
        android:layout_marginTop="423dp"
        android:layout_marginEnd="25dp"
        android:paddingLeft="30dp"
        android:text="Name"
        android:textColor="#FD0606"
        android:textSize="25dp"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/gender"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/setupimage"
        android:layout_alignParentTop="true"
        android:layout_marginTop="466dp"
        android:layout_marginEnd="25dp"
        android:paddingLeft="30dp"
        android:text="Gender"
        android:textColor="#FD0606"
        android:textSize="25dp"
        android:textStyle="bold" />


</RelativeLayout>